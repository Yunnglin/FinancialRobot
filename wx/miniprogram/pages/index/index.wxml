<home wx:if="{{PageCur=='home'}}"></home>
<application wx:if="{{PageCur=='application'}}"></application>
<statistics wx:if="{{PageCur=='statistics'}}"></statistics>
<my wx:if="{{PageCur=='my'}}"></my>
<view class="cu-bar tabbar bg-white shadow foot">
  <view class="action" bindtap="NavChange" data-cur="home">
    <view class='cuIcon-cu-image'>
      <image src="/imgs/home{{PageCur=='home'?'_cur':''}}.png"></image>
    </view>
    <view class="{{PageCur=='home'?'text-green':'text-gray'}}">首页</view>
  </view>
  <view class="action" bindtap="NavChange" data-cur="application">
    <view class='cuIcon-cu-image'>
      <image src="/imgs/app{{PageCur=='application'?'_cur':''}}.png"></image>
    </view>
    <view class="{{PageCur=='application'?'text-green':'text-gray'}}">应用</view>
  </view>
  <view class="action" bindtap="NavChange" data-cur="statistics">
    <view class='cuIcon-cu-image'>
      <image src="/imgs/stat{{PageCur=='statistics'?'_cur':''}}.png"></image>
    </view>
    <view class="{{PageCur=='statistics'?'text-green':'text-gray'}}">统计</view>
  </view>
  <view class="action" bindtap="NavChange" data-cur="my">
    <view class='cuIcon-cu-image'>
      <image src="/imgs/my{{PageCur=='my'?'_cur':''}}.png"></image>
    </view>
    <view class="{{PageCur=='my'?'text-green':'text-gray'}}">我的</view>
  </view>
</view>