<cu-custom bgColor="bg-gradual-pink" isBack="{{true}}">
  <view slot="backText">返回</view>
  <view slot="content">新增客户</view>
</cu-custom>
<view class="cu-form-group margin-top">
  <view class="title">客户名称 *</view>
  <input placeholder="请输入客户名称" style="text-align:right"></input>
</view>
<view class="cu-form-group">
  <view class="title">客户类型 *</view>
  <picker bindchange="typeChange" value="{{tindex}}" range="{{type}}">
    <view class="picker">
      {{tindex?type[tindex]:'请选择'}}
    </view>
  </picker>
</view>
<view class="cu-form-group">
  <view class="title">客户等级</view>
  <picker bindchange="rangeChange" value="{{rindex}}" range="{{range}}">
    <view class="picker">
      {{rindex?range[tindex]:'零售客户'}}
    </view>
  </picker>
</view>

<view class="cu-form-group margin-top">
  <view class="title">联系人</view>
  <input placeholder="请输入" style="text-align:right"></input>
</view>
<view class="cu-form-group">
  <view class="title">手机</view>
  <input placeholder="请输入" style="text-align:right"></input>
</view>
<view class="cu-form-group">
  <view class="title">期初应收款</view>
  <input placeholder="请输入" style="text-align:right"></input>
</view>
<view class="cu-form-group">
  <view class="title">期初预收款</view>
  <input placeholder="请输入" style="text-align:right"></input>
</view>

<view class="padding flex flex-direction">
  <button class="cu-btn bg-red margin-tb-sm lg">确定</button>
   <button class="cu-btn bg-grey lg">取消</button>
</view>
