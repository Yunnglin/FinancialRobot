<cu-custom bgColor="bg-gradual-pink" isBack="{{true}}">
  <view slot="backText">返回</view>
  <view slot="content">新增货物</view>
</cu-custom>
<view class="cu-form-group margin-top">
  <view class="title">商品名称 *</view>
  <input placeholder="请输入商品名称" style="text-align:right" value="{{this.data.name}}" bindinput='nameChange'></input>
</view>
<view class="cu-form-group">
  <view class="title">商品类型 *</view>
  <picker bindchange="goodChange" value="{{gindex}}" range="{{type}}">
    <view class="picker">
      {{gindex?type[gindex]:'选择一个商品类型'}}
    </view>
  </picker>
</view>
<view class="cu-form-group">
  <view class="title">商品单位 *</view>
  <picker bindchange="unitChange" value="{{uindex}}" range="{{unitInfo}}">
    <view class="picker">
      {{uindex?unitInfo[uindex]:'选择一个商品单位'}}
    </view>
  </picker>
</view>
<!-- 这个后台接口里没有，待定 -->
<view class="cu-form-group margin-top">
  <view class="title">商品品牌</view>
  <input placeholder="请输入商品品牌" style="text-align:right"></input>
</view>
<view class="cu-form-group">
  <view class="title">规格型号</view>
  <input placeholder="请输入规格型号" style="text-align:right"></input>
</view>
<!-- =========== -->
<view class="cu-form-group">
  <view class="title">售价</view>
  <input placeholder="请输入商品批发价" style="text-align:right" value='{{this.data.sellprice}}' bindinput='sellpriceChange'></input>
</view>
