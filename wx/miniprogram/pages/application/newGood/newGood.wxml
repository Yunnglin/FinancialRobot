<cu-custom bgColor="bg-gradual-pink" isBack="{{true}}">
  <view slot="backText">返回</view>
  <view slot="content">新增货物</view>
</cu-custom>
<view class="cu-form-group margin-top">
  <view class="title">商品代码 *</view>
  <input placeholder="请输入商品代码" style="text-align:right"></input>
</view>
<view class="cu-form-group">
  <view class="title">商品名称 *</view>
  <input placeholder="请输入商品名称" style="text-align:right"></input>
</view>
<view class="cu-form-group">
  <view class="title">商品类型 *</view>
  <picker bindchange="goodChange" value="{{gindex}}" range="{{goodtype}}">
    <view class="picker">
      {{gindex?goodtype[gindex]:'选择一个商品类型'}}
    </view>
  </picker>
</view>
<view class="cu-form-group">
  <view class="title">商品单位 *</view>
  <picker bindchange="unitChange" value="{{uindex}}" range="{{unit}}">
    <view class="picker">
      {{uindex?unit[uindex]:'选择一个商品单位'}}
    </view>
  </picker>
</view>

<view class="cu-form-group margin-top">
  <view class="title">商品品牌</view>
  <input placeholder="请输入商品品牌" style="text-align:right"></input>
</view>
<view class="cu-form-group">
  <view class="title">规格型号</view>
  <input placeholder="请输入规格型号" style="text-align:right"></input>
</view>
<view class="cu-form-group">
  <view class="title">批发价</view>
  <input placeholder="请输入商品批发价" style="text-align:right"></input>
</view>
<view class="cu-form-group">
  <view class="title">零售价</view>
  <input placeholder="请输入商品零售价" style="text-align:right"></input>
</view>
<view class="cu-form-group">
  <view class="title">默认仓库</view>
  <picker bindchange="storeChange" value="{{sindex}}" range="{{store}}">
    <view class="picker">
      {{sindex?store[sindex]:'选择一个默认仓库'}}
    </view>
  </picker>
</view>

<view class="padding flex flex-direction">
  <button class="cu-btn bg-red margin-tb-sm lg" bindtap='addsuccess'>确定</button>
   <button class="cu-btn bg-grey lg" bindtap='addfail'>取消</button>
</view>